<!-- Start header -->
<header class="top-header">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="logo_main">
                    <a href="@Url.Action("Index", "Home")" style="color:red; font-weight:600 !important; font-size:larger !important;">
                        ABCompany
                    </a>
                    @if (Session["FirstName"] != null)
                    {
                        <span> - @(Session["FirstName"]?.ToString()) - </span>
                        <a href="@Url.Action("Logout","Users")" class="btn btn-warning">Logout</a>
                    }
                </div>
            </div>
            <div class="col-sm-6">
                <button type="button" id="sidebarCollapse" class="btn btn-info navbar-btn">
                    <img src="~/Content/images/menu_icon.png">
                </button>
            </div>
        </div>
    </div>
</header>
<!-- End header -->
